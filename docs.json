{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Sonarly",
  "colors": {
    "primary": "#00EEC6",
    "light": "#00E8C1",
    "dark": "#00C9A7"
  },
  "favicon": "/favicon.png",
  "logo": {
    "light": "/logo/dark.png",
    "dark": "/logo/light.png"
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/quickstart"
    }
  ],
    "navigation": {
    "pages": [
      {
        "group": "Overview",
        "pages": [
          "quickstart",
          {
            "group": "Tracker",
            "pages": [
              "frontend",
              "source-maps",
              "backend-tracing"
            ]
          },
          "troubleshooting"
        ]
      },
      {
        "group": "Features",
        "pages": [
          "ai-alerts",
          "issue-replay",
          "llm-context"
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:founders@sonarly.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Start fixing bugs",
      "href": "https://sonarly.dev"
    }
  },
    "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/alex78420/sonarly-tracker",
      "x": "https://x.com/SonarlyDev",
      "discord": "https://discord.gg/9XDVzde4G4"
    }
  }
}
